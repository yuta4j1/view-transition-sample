---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon";
export function getStaticPaths() {
  return [
    { params: { id: "1" } },
    { params: { id: "2" } },
    { params: { id: "3" } },
    { params: { id: "4" } },
    { params: { id: "5" } },
  ];
}
const { id } = Astro.params;
const photoUrl = `/images/photo${id}.jpg`;
const photoInfos = [
  {
    id: "1",
    location: "昭和四日市石油南",
  },
  {
    id: "2",
    location: "淀屋橋 中之島公園",
  },
  {
    id: "3",
    location: "あべのハルカス",
  },
  {
    id: "4",
    location: "京都 永観堂",
  },
  {
    id: "5",
    location: "高台寺",
  },
];
---

<Layout title="Garally">
  <main
    class="relative w-screen flex justify-center"
    style={{
      backgroundImage: `url(${photoUrl})`,
      backgroundSize: "cover",
      backgroundRepeat: "no-repeat",
    }}
  >
    <div class="container absolute z-10 w-screen">
      <h1 class="title text-lg p-2 rounded-md bg-gray-200 w-[200px]">
        <a href="/" class="flex items-center"
          ><Icon name="system-uicons:arrow-left" width="30" height="30" /><span
            class="ml-2">All Photos</span
          ></a
        >
      </h1>
      <div class="h-4"></div>
      <div class="p-8 w-full flex justify-center">
        <img
          class="photo-link rounded-md"
          style={{ viewTransitionName: `photo${id}` }}
          src={photoUrl}
          width={780}
        />
      </div>
      <!-- <div class="flex justify-center">
        <div class="rounded-lg w-[350px] p-8 backdrop-blur-3xl">
          <section class="flex items-center">
            <Icon name="system-uicons:location" width="20" height="20" />
            <p>
              <a href="" class="ml-2" target="_blank"
                >{photoInfos.filter((v) => v.id === id)[0].location}</a
              >
            </p>
          </section>
        </div>
      </div> -->
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    height: 100vh;
  }
  main::before {
    background: inherit;
    content: "";
    position: absolute;
    filter: blur(16px);
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    z-index: 0;
  }
  .container {
    margin-left: auto;
    margin-right: auto;
    padding: 3rem;
    max-width: 40ch;
    height: 100%;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .photo-link {
    box-shadow: 0px 30px 53px 2px #fcfcfc;
  }
  .title {
    font-family: "Bruno Ace SC", cursive;
    view-transition-name: header-title;
  }
</style>
